$("#form").html("<%= escape_javascript render partial: 'sell_form' %>");

insertTitle('New Sale');
populateCoins();

function populateCoins() {
  var coin_hash = $('#coin-hash').data('coins');
  var keys = Object.keys(coin_hash).sort();

  $.each(keys, function() {
      $('#trade_symbol').append($("<option />").val(this).text(this.toUpperCase()));
  });

  $('#trade_symbol').change(function() {
    var selected_coin = $(this).val();
    $('#max-sell').text(" Max: " + coin_hash[selected_coin].amount);
  });
}